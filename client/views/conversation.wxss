.conversation-container {
  border: 1rpx solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
  box-sizing: border-box;
}

.conversation-top {
  display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	padding-left: 30rpx;
	padding-right: 30rpx;
}

.conversation-image {
  margin-top: 15rpx;
}

.conversation-tags {
  margin-top: 15rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: lightgray;
}

.conversation-content {
  margin-top: 20rpx;
  font-size: 14px;
  line-height: 1.4;
  margin-top: 15rpx;
  text-align: left;
  word-break: break-all;
  /* display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;  */
}

.conversation-bottom {
  margin-bottom: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 90%;
  border-top: 1px solid #ebebeb;
}
